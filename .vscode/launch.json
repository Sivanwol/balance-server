  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Config Service",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start:service:config"
      ],
      "runtimeExecutable": "pnpm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Launch SSO Service",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start:service:sso"
      ],
      "runtimeExecutable": "pnpm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Launch API Gateway Service",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start:service:api"
      ],
      "runtimeExecutable": "pnpm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}
